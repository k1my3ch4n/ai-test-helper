{
  "name": "ai-test-helper",
  "version": "1.0.0",
  "description": "GitHub Actions를 이용한 AI 기반 테스트 코드 자동 생성 도구",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build dist/index.js -o dist --source-map --license licenses.txt",
    "package": "npm run build && npm run bundle",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "prepare": "npm run package"
  },
  "keywords": [
    "github-actions",
    "testing",
    "ai",
    "claude",
    "gemini",
    "test-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
